/usr/share/tomcat/logs/catalina.out {
copytruncate
daily
rotate 14
compress
missingok
size 1k
su FEDORAUSER FEDORAUSER
}
/usr/share/tomcat/logs/*.log {
copytruncate
daily
rotate 14
compress
missingok
size 1k
su FEDORAUSER FEDORAUSER
}
/usr/local/fedora/server/logs/*.log {
copytruncate
daily
rotate 14
compress
missingok
size 1k
su FEDORAUSER FEDORAUSER
}
